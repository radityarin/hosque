<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:orientation="vertical"
    tools:context=".activities.PilihJadwalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Pesanan"
        android:textSize="32dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Rumah Sakit"/>

    <TextView
        android:id="@+id/tv_namarumahsakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Dokter"/>

    <TextView
        android:id="@+id/tv_namadokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spesialis"/>

    <TextView
        android:id="@+id/tv_spesialis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Pilih Jadwal"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:entries="@array/list_jadwal"
        android:id="@+id/spinner_jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"
        android:id="@+id/btn_pesan"
        android:textAllCaps="false"
        android:background="@drawable/btnorange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesankan aku "/>

</LinearLayout>